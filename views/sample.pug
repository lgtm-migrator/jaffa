extends skeleton
block css
  link(rel="stylesheet",href="/index.css")
block breadcrumbs
block content
  h1.heading-large Jaffa Cake #{sample.sampleIdentifier}
  form.column-two-thirds
    fieldset
      h2.heading-medium How do you rate sample #{sample.sampleIdentifier}'s...
      table
        tr
          th Genoise sponge base
          td
            input.form-control(required, type="number", min="0", max="100", maxlength="3", size="3", name="sponge")
            span &nbsp; out of 100
        tr
          td Orange jelly filling
          td
            input.form-control(required, type="number", min="0", max="100",maxlength="3",  size="3", name="orange")
            span &nbsp; out of 100
        tr
          td Chocolate topping
          td
            input.form-control(required, type="number", min="0", max="100",maxlength="3",  size="3", name="chocolate")
            span &nbsp; out of 100
        tr
          td.heading-small Overall score
          td
            input.form-control(required, type="number", min="0", max="100",maxlength="3",  size="3", name="overall")
            span &nbsp; out of 100
    fieldset.inline
      legend
        h2.heading-medium Do you think sample #{sample.sampleIdentifier} is McVitie's Jaffa Cakes?
      .multiple-choice
        input(required, type="radio", name="mcvities", value="Yes")#mcv1
        label(for="mcv1") Yes, it is McVitie's
      .multiple-choice
        input(required, type="radio", name="mcvities", value="No")#mcv2
        label(for="mcv2") No, it is another brand
    fieldset
      h2.heading-medium How much do you think #{sample.pricePer} of sample #{sample.sampleIdentifier} cost?
      span.font-medium Â£
      input(type="number", min="0", step="0.01", name="price", placeholder="6.99").form-control-1-4.form-control
    fieldset.inline
      legend
        h2.heading-medium Would you consider buying sample  #{sample.sampleIdentifier} instead of McVitie's?
        .multiple-choice
          input(type="radio", name="buyagain", value="Yes")#ba1
          label(for="ba1") Yes
        .multiple-choice
          input(type="radio", name="buyagain", value="No")#ba2
          label(for="ba2") No
    p &nbsp;
    input.font-mediumm.button(type="submit",value="Submit scores for Sample " + sample.sampleIdentifier)
    p: a(href="/").link-back Back to sample list
  .column-one-third
    h2.heading-small Allergen information
    p The following allergens are listed in bold on sample #{sample.sampleIdentifier}'s ingredients list:
    ul.list.list-bullet
      for allergen in sample.allergens
        li= allergen
    if sample.mayContain.length > 0
      if sample.mayContain.length > 1
        p The following were listed as either "may contain" or "not suitable for" outside of the ingredients list:
        ul.list.list-bullet
          for allergen in sample.mayContain
            li= allergen
      else
        p #{sample.mayContain[0]} was listed as either "may contain" or "not suitable for" on the packaging.