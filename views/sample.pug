extends skeleton
block css
  link(rel="stylesheet",href="/index.css")
block breadcrumbs
block content
  h1.heading-large Jaffa Cake #{sample.toUpperCase()}
  form.column-two-thirds
    fieldset
      h2.heading-medium How do you rate sample #{sample.toUpperCase()}'s...
      table
        tr
          th Genoise sponge base
          td
            input.form-control(required, type="number", min="0", max="100", maxlength="3", size="3", name="sponge")
            span &nbsp; out of 100
        tr
          td Orange jelly filling
          td
            input.form-control(required, type="number", min="0", max="100",maxlength="3",  size="3", name="orange")
            span &nbsp; out of 100
        tr
          td Chocolate topping
          td
            input.form-control(required, type="number", min="0", max="100",maxlength="3",  size="3", name="chocolate")
            span &nbsp; out of 100
        tr
          td.heading-small Overall score
          td
            input.form-control(required, type="number", min="0", max="100",maxlength="3",  size="3", name="overall")
            span &nbsp; out of 100
    fieldset.inline
      legend
        h2.heading-medium Do you think Sample #{sample.toUpperCase()} is McVitie's Jaffa Cakes?
      .multiple-choice
        input(required, type="radio", name="mcvities", value="Yes")#mcv1
        label(for="mcv1") Yes, it is McVitie's
      .multiple-choice
        input(required, type="radio", name="mcvities", value="No")#mcv2
        label(for="mcv2") No, it is another brand
    fieldset
      h2.heading-medium How much do you think 12 of sample #{sample.toUpperCase()} cost?
      span.font-medium Â£
      input(type="number", min="0", step="0.01", name="price", placeholder="6.99").form-control-1-4.form-control
    fieldset.inline
      legend
        h2.heading-medium Would you consider buying sample  #{sample.toUpperCase()} instead of McVitie's?
        .multiple-choice
          input(type="radio", name="buyagain", value="Yes")#ba1
          label(for="ba1") Yes
        .multiple-choice
          input(type="radio", name="buyagain", value="No")#ba2
          label(for="ba2") No
    p &nbsp;
    input.font-mediumm.button(type="submit",value="Submit scores for Sample " + sample.toUpperCase())
    p: a(href="/").link-back Back to sample list